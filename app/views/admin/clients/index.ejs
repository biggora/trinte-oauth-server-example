<% layout('../default_layout') -%>

<!-- index page -->
<div id="content" class="container">
    <!-- page breadcrumb -->
    <ul class="breadcrumb">
        <li><a href="/admin_"><i class="icon-home"></i> Home</a></li>
        <li class="active"><a href="<%- pathTo.admin_clients() %>"><%- title %></a></li>
    </ul>
    <!-- page title -->
    <div class="page-header">
        <h1><%- title %></h1>
    </div>
    <!-- page submenu -->
    <div class="row">
        <div class="col-md-6 col-xs-6">
            <a href="<%- pathTo.new_admin_client() %>" class="btn btn-primary">
                <i class="icon-plus icon-white"></i> New Client
            </a>
        </div>
        <div class="col-md-6 col-xs-6">
            <form class="admin-searchbox pull-right">
                <input data-provide="typeahead" data-field="id" data-url="<%- pathTo.admin_clients() %>" data-singular="client" class="form-control" type="text" placeholder="Search clients by id" />
            </form>
        </div>
        <div class="clearfix"><br/></div>
    </div>
    <!-- items list -->
    <div class="row">
        <div class="col-md-12">
            <% if (clients.length > 0) { %>
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th class="col-md-1 col-xs-1"><%- sortFor('_id' /* field name */,'ID' /* column title */, "Sorting column" /* tooltip message */) %></th>
                        
                        <th class="col-md-3 col-xs-3" style="text-align:center">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% clients.forEach(function(client){ %>
                    <!-- item id <%= client.id %> -->
                    <tr>
                        <td>
                            <a href="<%- pathTo.show_admin_client(client) %>"><%- formVal(client.id) %></a>
                        </td>
                        
                        <td style="text-align:right">
                            <a class="btn btn-xs btn-default" href="<%- pathTo.show_admin_client(client) %>"><i class="icon-tasks"></i> Detail</a>
                            <a class="btn btn-xs btn-default" href="<%- pathTo.edit_admin_client(client) %>"><i class="icon-edit"></i> Edit</a>
                            <a class="btn btn-xs btn-danger" href="<%- pathTo.destroy_admin_client(client) %>" data-confirm="true" data-remote="true" data-method="delete" data-jsonp="(function (u) {location.href = u;})"><i class="icon-remove icon-white"></i> Delete</a>
                        </td>
                    </tr>
                    <% }) %>
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan='2'><%- pagerHtml %></td>
                    </tr>
                </tfoot>
            </table>
            <% } else { %>
            <!--no items list-->
            <p class="alert alert-block alert-info">
                <strong>No clients were found.</strong>
            </p>
            <% } %>
        </div>
    </div>
</div>
<script type="text/javascript" charset="utf-8" src="/js/bs/typeahead.min.js"></script>
<!-- end index page -->