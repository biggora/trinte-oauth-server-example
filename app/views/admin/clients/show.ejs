<% layout('../default_layout') -%>

<!-- show page -->
<div id="content" class="container">
    <!-- page breadcrumb -->
    <ul class="breadcrumb">
        <li><a href="/admin_"><i class="fa fa-home"></i> Home</a></li>
        <li><a href="<%- pathTo.admin_clients() %>">Clients</a></li>
        <li class="active"><a href="#"><%- title %></a></li>
    </ul>
    <!-- page title -->
    <div class="page-header">
        <h1><%- title %></h1>
    </div>
    <!-- item details -->
    <div class="row">
        <div class="col-md-12">
            <table class="table table-bordered">
                <tbody>
                    
                    <tr>
                        <th class="col-md-4">Client_name</th>
                        <td><%- formVal(client.client_name) %></td>
                    </tr>
                    
                    <tr>
                        <th class="col-md-4">Client_type</th>
                        <td><%- formVal(client.client_type) %></td>
                    </tr>
                    
                    <tr>
                        <th class="col-md-4">Client_id</th>
                        <td><%- formVal(client.client_id) %></td>
                    </tr>
                    
                    <tr>
                        <th class="col-md-4">Client_secret</th>
                        <td><%- formVal(client.client_secret) %></td>
                    </tr>
                    
                    <tr>
                        <th class="col-md-4">Redirect_uri</th>
                        <td><%- formVal(client.redirect_uri) %></td>
                    </tr>
                    
                    <tr>
                        <th class="col-md-4">Grant_types</th>
                        <td><%- formVal(client.grant_types) %></td>
                    </tr>
                    
                    <tr>
                        <th class="col-md-4">User_id</th>
                        <td><%- formVal(client.user_id) %></td>
                    </tr>
                    
                    <tr>
                        <th class="col-md-4">Created</th>
                        <td><%- normalizeDate(client.created) %></td>
                    </tr>
                    
                </tbody>
            </table>
            <div class="well">
                <a class="btn btn-default" href="<%- pathTo.edit_admin_client(client) %>"><i class="icon-edit"></i> Edit</a>
                <a class="btn btn-danger" href="<%- pathTo.destroy_admin_client(client) %>" data-confirm="true" data-remote="true" data-method="delete" data-jsonp="(function (u) {location.href = u;})"><i class="icon-remove icon-white"></i> Delete</a>
                <a class="btn btn-default" href="<%- pathTo.admin_clients() %>" title="List Clients"><i class="icon-tasks"></i> List Clients</a>
                <div class="clearfix"></div>
            </div>
        </div>
        <div class="clearfix"></div>
    </div>
</div>
<!-- end show page -->