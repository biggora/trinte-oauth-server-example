<% layout('../default_layout') -%>

<!-- edit page -->
<div id="content" class="container">
    <!-- page breadcrumb -->
    <ul class="breadcrumb">
        <li><a href="/admin_"><i class="fa fa-home"></i> Home</a></li>
        <li><a href="<%- pathTo.admin_users() %>">Users</a></li>
        <li class="active"><a href="#"><%- title %></a></li>
    </ul>
    <!-- page title -->
    <div class="page-header">
        <h1><%- title %></h1>
    </div>
    <!-- form -->
    <form method="post" action="<%- pathTo.update_admin_user(user) %>" class="form-horizontal" role="form">
        <input type="hidden" name="_method" value="put"/>
        <input type="hidden" name="_csrf" value="<%= session._csrf %>" />
        <%- partial('form',{ locals : { user : user } }) %>
        <div class="well">
            <div  class="col-lg-12">
                <button class="btn btn-primary" type="submit" value="Update">
                    <i class="fa fa-check"></i>
                    Save
                </button>
                <a class="btn btn-default" href="<%- pathTo.admin_users() %>">
                    <i class="fa fa-tasks"></i>
                    Cancel
                </a>
            </div>
            <div class="clearfix"></div>
        </div>
    </form>
</div>
<!-- end edit page -->