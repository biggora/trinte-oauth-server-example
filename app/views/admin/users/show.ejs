<% layout('../default_layout') -%>

<!-- show page -->
<div id="content" class="container">
    <!-- page breadcrumb -->
    <ul class="breadcrumb">
        <li><a href="/admin"><i class="fa fa-home"></i> Home</a></li>
        <li><a href="<%- pathTo.admin_users() %>"><i class="fa fa-users"></i> Users</a></li>
        <li class="active"><a href="#"><%- title %></a></li>
    </ul>
    <!-- page title -->
    <div class="page-header">
        <h1><%- title %></h1>
    </div>
    <!-- item details -->
    <div class="row">
        <div class="col-md-12">
            <table class="table table-bordered">
                <tbody>
                    
                    <tr>
                        <th class="col-md-4">Active</th>
                        <td><%- formVal(user.active) %></td>
                    </tr>
                    
                    <tr>
                        <th class="col-md-4">Email</th>
                        <td><%- formVal(user.email) %></td>
                    </tr>
                    
                    <tr>
                        <th class="col-md-4">Password</th>
                        <td><%- formVal(user.password) %></td>
                    </tr>
                    
                    <tr>
                        <th class="col-md-4">First_name</th>
                        <td><%- formVal(user.first_name) %></td>
                    </tr>
                    
                    <tr>
                        <th class="col-md-4">Last_name</th>
                        <td><%- formVal(user.last_name) %></td>
                    </tr>
                    
                    <tr>
                        <th class="col-md-4">Gender</th>
                        <td><%- formVal(user.gender) %></td>
                    </tr>
                    
                    <tr>
                        <th class="col-md-4">Photo</th>
                        <td><%- formVal(user.photo) %></td>
                    </tr>
                    
                    <tr>
                        <th class="col-md-4">Birthday</th>
                        <td><%- formVal(user.birthday) %></td>
                    </tr>
                    
                    <tr>
                        <th class="col-md-4">Website</th>
                        <td><%- formVal(user.website) %></td>
                    </tr>
                    
                    <tr>
                        <th class="col-md-4">Provider</th>
                        <td><%- formVal(user.provider) %></td>
                    </tr>
                    
                    <tr>
                        <th class="col-md-4">Language</th>
                        <td><%- formVal(user.language) %></td>
                    </tr>
                    
                    <tr>
                        <th class="col-md-4">Account_type</th>
                        <td><%- formVal(user.account_type) %></td>
                    </tr>
                    
                    <tr>
                        <th class="col-md-4">Account Currency</th>
                        <td><%- formVal(user.account_currency) %></td>
                    </tr>
                    
                    <tr>
                        <th class="col-md-4">Created</th>
                        <td><%- normalizeDate(user.created) %></td>
                    </tr>
                    
                </tbody>
            </table>
            <div class="well">
                <a class="btn btn-default" href="<%- pathTo.edit_admin_user(user) %>"><i class="fa fa-edit"></i> Edit</a>
                <a class="btn btn-danger" href="<%- pathTo.destroy_admin_user(user) %>" data-confirm="true" data-remote="true" data-method="delete" data-jsonp="(function (u) {location.href = u;})"><i class="fa fa-times"></i> Delete</a>
                <a class="btn btn-default" href="<%- pathTo.admin_users() %>" title="List Users"><i class="fa fa-tasks"></i> List Users</a>
                <div class="clearfix"></div>
            </div>
        </div>
        <div class="clearfix"></div>
    </div>
</div>
<!-- end show page -->